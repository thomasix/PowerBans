<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>nl.thomasix</groupId>
  <artifactId>powerbans</artifactId>
  <name>PowerBans</name>
  <version>1.0-SNAPSHOT</version>
  <description>A ban plugin with powerfull ban tools. Including temp bans, IP bans, blacklist bans, gui etc..</description>
  <developers>
    <developer>
      <name>Thomasix</name>
      <email>thomas@creusanetwork.com</email>
      <roles>
        <role>Lead-Dev</role>
      </roles>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>Thomasix 2019-2020</name>
      <comments>Copyright (c) 2020 Thomasix. This plugin can be used by everyone. It is a public plugin, everyone can modify the source code.
            All rights are reserved which means that you can't distribute nor sell it as your own.</comments>
    </license>
  </licenses>
  <organization>
    <name>Thomasix</name>
    <url>https://github.com/thomasix</url>
  </organization>
  <build>
    <sourceDirectory>${basedir}/src</sourceDirectory>
    <defaultGoal>clean package install</defaultGoal>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>${basedir}/src</directory>
        <includes>
          <include>plugin.yml</include>
          <include>config.yml</include>
        </includes>
      </resource>
    </resources>
    <finalName>${project.name}-${project.version}</finalName>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>2.8.2</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.2</version>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <includes>
              <include>**</include>
            </includes>
          </artifactSet>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>jcenter</id>
      <name>jcenter-bintray</name>
      <url>http://jcenter.bintray.com</url>
    </repository>
    <repository>
      <id>nexus</id>
      <url>http://nexus.creusanetwork.com:8081/repository/maven-public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot</artifactId>
      <version>1.15.1</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <distributionManagement>
    <repository>
      <id>nexus</id>
      <name>Nexus Private Repository Releases</name>
      <url>http://nexus.creusanetwork.com:8081/repository/plugins_final/</url>
    </repository>
    <snapshotRepository>
      <id>nexus</id>
      <name>Nexus Private Repository Snapshots</name>
      <url>http://nexus.creusanetwork.com:8081/repository/plugins_in_dev/</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <main>nl.thomasix.powerbans.main.PowerBans</main>
    <authors>[Thomasix]</authors>
    <softdepend>[]]</softdepend>
    <project.build.sourceEnoding>UTF-8</project.build.sourceEnoding>
  </properties>
</project>

